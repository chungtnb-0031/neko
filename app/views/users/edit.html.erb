<% provide :title, t(".title") %>
<h1><%= t ".sentence_1" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= render "shared/error_messages" %>

	  <%= f.label "avatar" %>
		<% if(!@user.image.url.nil?) %>
			<%= image_tag(@user.image.url, style:'width:90%; object-fit:cover', alt:'...') %>
		<% else %>
			<div class="ava-box div-center">
				<%= gravatar_for(@user, size: Settings.user.ava_size) %>
			</div>
		<% end %>
	  <%= f.file_field :image , class: "form-control"%>

      <%= f.label t(".name") %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label t(".email") %>
      <%= f.email_field :email, class: "form-control" %>

	  <%= f.label t(".birth") %>
      <%= f.date_field :date_of_birth, class: "form-control" %>

      <%= f.label t(".password") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label t(".confirmation") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t(".sentence_2"), class: "btn btn-primary"%>
    <% end %>

  </div>
</div>
