<div class="cart" style="margin-top: 40px;">
	<div class="product">
		<section class="section">
			<%= render(@cart.line_items) %>
			<%= render(@cart.cat_items) %>
			<div class="columns">
				<div class="column">
				<%= button_to 'Empty Cart', @cart, method: :delete, data: { confirm: "Are you sure? " }, class: 'btn btn-primary btn-sm' %>
				</div>
			</div>
		</section>
	</div>
	<div class="price border-price text-right">
		<h4>
			Total: <%= number_to_currency(@cart.total_price , unit: "VND", format: "%n %u", precision: 0) %>
		</h4>
		<p><%= link_to 'Keep Booking', root_path, class: 'button is-warning', style:"text-decoration: underline;" %><p>
		<%= link_to 'Complete', @cart, method: :delete, class: 'btn btn-primary', style:"margin-top:10px" %>
	</div>
</div>

