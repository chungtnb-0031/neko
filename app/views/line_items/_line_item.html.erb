<div class="cart text-right">
	<div class="product">
		<figure class="center">
			<% if line_item.food.food_images.first %>
				<%= image_tag(line_item.food.food_images.first.link, style:"width:100%; height:200px; object-fit:cover") %>
			<% end %>
		</figure>
  	</div>
  	<div class="price">
		<strong><%= line_item.food.name %> x <%= line_item.quantity %> </strong>
		<p><%= number_to_currency(line_item.total_price , unit: "VND", format: "%n %u", precision: 0) %></p>
		
		<%= link_to 'Remove Item', line_item, method: :delete, data: { confirm: "Are you sure? " }, style:"text-decoration: underline;" %>
 	</div>
</div>
<hr>
